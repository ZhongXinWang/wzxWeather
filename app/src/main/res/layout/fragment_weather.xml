<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="@color/colorhui"
             tools:context="weather.test.wzx.com.wzxweather.fragment.WeatherFragment">


    <include layout="@layout/activity_weather_head" android:layout_height="240dp" android:layout_width="match_parent"/>
    <include layout="@layout/activity_weather_forecast"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/head"/>
    <include layout="@layout/activity_weather_aqi" android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_below="@id/forecast"
             android:layout_marginTop="@dimen/margin_top"
        />
    <include layout="@layout/activity_weather_suggest" android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_below="@id/aqi"
             android:layout_marginTop="@dimen/margin_top"
        />
</RelativeLayout>
</ScrollView>
