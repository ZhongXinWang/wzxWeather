<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="weather.test.wzx.com.wzxweather">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/show_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WeatherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddCityActivity">
        </activity>
        <activity
            android:name=".activity.ShowSelectActivity"
            android:theme="@style/AppThemeActionBar">
        </activity>

        <service
            android:name=".services.AutoUpdateService"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity android:name=".activity.SetingActivity"
                  android:theme="@style/AppThemeActionBar"
            >
        </activity>
    </application>

</manifest>